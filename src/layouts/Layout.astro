<!-- entre los tres guiones se especifican o importan componentes de astro -->

---
interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import '@fontsource-variable/onest';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} /> <!-- usamos la variable description especificada arriba que definimos en el index de la pag -->
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body> 
		<div
		    class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]">
	    </div>
		<Header />
		<!-- el slot es la sección donde va a aparecer el resto de mi página, como un marcador de posición o placeholder para información que va a cargarse como una variable -->
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		/* el color scheme le dice al elemento que colores renderiza el navegador */
		color-scheme: dark;

	}
	html {
		font-family: 'Onest Variable', system-ui, sans-serif;
		scroll-behavior: smooth; /* para que al clickear un elemento de la barra de navegación de arriba y nos mande a una sección específica no se sienta forzado */
	}

	body {
		background:#050505;
		display: flex;
		flex-direction: column;
		justify-content: center;
		min-height: 100vh;
	}

	/* si el usuario tiene desactivadas las animaciones de movimiento, cambiamos la animación de scroll que configuramos en el css del html a auto */

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
</style>
